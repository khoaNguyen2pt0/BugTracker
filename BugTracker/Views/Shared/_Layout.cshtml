    <script src="~/Scripts/datatables.min.js"></script>
    <script>$(".table").DataTable();</script>

    <!-- PAGE SCRIPTS -->
    <script src="~/Scripts/dashboard2.js"></script>

    @RenderSection("scripts", required: false)
